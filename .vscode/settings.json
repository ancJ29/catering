{
  "cSpell.ignorePaths": [
    "./src/services/i18n/lang/vi.ts",
    "./src/types/auto-generated",
  ],
  "cSpell.words": [
    "arrowParens",
    "Autosize",
    "clsx",
    "Controll",
    "mantine",
    "tabler",
    "toastify",
    "usehooks",
    "zustand"
  ],
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.addMissingImports": "explicit",
    "source.removeUnusedImports": "explicit"
  },
}
